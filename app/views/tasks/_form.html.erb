<%= form_with(model: [@project, @task], local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :priority %>
    <%= form.number_field :priority, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, ["pending", "in progress", "completed"], {}, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
